{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>hmcts/.github//renovate/automerge-minor",
    "local>hmcts/.github:renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update trufflehog version in Dockerfiles",
      "managerFilePatterns": [
        "/Dockerfile/"
      ],
      "matchStrings": [
        "TRUFFLEHOG_VERSION = '(?<depName>ghcr\\.io/trufflesecurity/trufflehog):(?<currentValue>\\d+\\.\\d+\\.\\d+)'"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
